<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.appmotion.udacitybaking">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

  <application
      android:name=".App"
      android:allowBackup="false"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      tools:ignore="GoogleAppIndexingWarning"
      tools:replace="android:allowBackup,android:supportsRtl">

    <!-- MainActivity -->
    <activity
        android:name=".MainActivity"
        android:label="@string/app_name"
        android:launchMode="singleTop"
        android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <!-- RecipeDetailActivity -->
    <activity
        android:name=".RecipeDetailActivity"
        android:label="@string/recipe_detail"
        android:launchMode="singleTop"
        android:parentActivityName=".MainActivity"
        android:theme="@style/AppTheme.NoActionBar">
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="de.appmotion.udacitybaking.MainActivity"/>
    </activity>
    <!-- RecipeDetailStepActivity -->
    <activity
        android:name=".RecipeDetailStepActivity"
        android:label="@string/recipe_detail_step"
        android:launchMode="singleTop"
        android:parentActivityName=".RecipeDetailActivity"
        android:theme="@style/AppTheme.NoActionBar">
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="de.appmotion.udacitybaking.RecipeDetailActivity"/>
    </activity>

    <!-- Our ContentProvider -->
    <provider
        android:name=".data.BakingContentProvider"
        android:authorities="de.appmotion.udacitybaking"
        android:exported="false"/>

    <!-- IntentService which runs data sync -->
    <service
        android:name=".sync.BakingSyncIntentService"
        android:exported="false"/>

  </application>

</manifest>